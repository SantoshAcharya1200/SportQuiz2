<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:background="@mipmap/rma9"


    android:orientation="vertical"
    tools:context="com.example.santos.sportquiz.HomeFragment">

   <RelativeLayout

       android:paddingTop="20dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"

       >
       <TextView
           android:layout_gravity="center"
           android:id="@+id/player_name"
           android:text="Santosh Acharya"
           android:textColor="@color/colorWhite"
           android:layout_marginLeft="30dp"
           android:textSize="30sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           />


       <de.hdodenhof.circleimageview.CircleImageView
           android:layout_below="@+id/player_name"


           android:layout_width="200dp"
           android:layout_height="200dp"

           android:layout_gravity="center"
           android:src="@drawable/rma8"
           android:elevation="2dp"
           android:id="@+id/circleView"
           android:layout_marginLeft="30dp"/>
       <TextView
           android:id="@+id/score1"

           android:layout_below="@id/circleView"
           android:text="Your Score:"
           android:textColor="@color/colorWhite"
           android:layout_marginLeft="40dp"

           android:textSize="30sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginBottom="20dp"
           />
       <TextView
           android:layout_below="@+id/score1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/player_score"
           android:text="500"
           android:textSize="30sp"
           android:textColor="@color/colorWhite"
           android:layout_marginLeft="80dp"
           />



   </RelativeLayout>

    <Button
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PlayAgain"

        android:background="@color/colorAccent"
        android:text="Play"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:paddingTop="2dp"/>

    <Button
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LogOut"

        android:background="@color/colorAccent"
        android:text="Log Out"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:paddingTop="2dp"/>








</LinearLayout>







